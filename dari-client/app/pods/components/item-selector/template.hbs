<table>
    <thead>
        <tr>
            <th>Select</th>
            <th>Category</th>
            <th>Item</th>
            <th>Material #</th>
            <th>Serial Number</th>
            <th>Current Qty</th>
        </tr>
    </thead>
    <tbody>
        {{#each attrs.items as |item|}}
            <tr>
                <td>
                    {{#if item.isChecked}}
                        <input type="checkbox" id="checkbox-{{item.id}}"
                            {{action "select" item this}} checked>
                    {{else}}
                        <input type="checkbox" id="checkbox-{{item.id}}"
                            {{action "select" item this}}>
                    {{/if}}
                        <!-- {{bind-attr checked="item.isChecked"}}> -->
                </td>
                <td>{{item.category}}</td>
                <td>{{item.name}}</td>
                <td>{{item.materialNumber}}</td>
                <td>{{item.serialNumber}}</td>
                <td>{{item.currentQty}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{selectedItems}}

<button {{action attrs.checkout selectedItems}}>Checkout Items</button>
